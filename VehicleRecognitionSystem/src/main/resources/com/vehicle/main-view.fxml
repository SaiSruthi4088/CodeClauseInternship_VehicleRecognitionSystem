<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vehicle.MainController">

    <!-- TOP BAR -->
    <top>
        <Label text="Vehicle Recognition System"
               style="-fx-font-size: 22px; -fx-padding: 10px;" />
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 15px;">

            <!-- Camera Feed -->
            <VBox spacing="5">
                <Label text="Live Camera Feed"/>
                <ImageView fx:id="cameraView" fitWidth="320" fitHeight="240" preserveRatio="true"/>
            </VBox>

            <!-- Uploaded Image -->
            <VBox spacing="5" GridPane.columnIndex="1">
                <Label text="Uploaded Image"/>
                <ImageView fx:id="imageView" fitWidth="320" fitHeight="240" preserveRatio="true"/>
            </VBox>

            <!-- Detection Result -->
            <VBox spacing="5" GridPane.rowIndex="1">
                <Label text="Detection Result"/>
                <TextArea fx:id="resultArea" prefHeight="100"/>
            </VBox>

        </GridPane>
    </center>

    <!-- BOTTOM BUTTONS -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15px;">
            <Button text="Start Camera" onAction="#startCamera"/>
            <Button text="Upload Image" onAction="#uploadImage"/>
            <Button text="Detect Vehicle" onAction="#detectVehicle"/>
        </HBox>
    </bottom>

</BorderPane>
